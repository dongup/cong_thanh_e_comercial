        }

        .dropdown-category {
            display: none;
        }

        @@media (max-width: 992px) {
            .dropdown-category {
                display: none;
            }
        }

        .nk-popover-content:before {
            content: "";
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 135px;
            height: 5px;
            background: #ee1e25;
            clip-path: polygon(0 0,100% 0,96% 100%,4% 100%);
        }

        .nk-top-stickers .nk-sticker {
            font-family: Arial,Helvetica Neue,Helvetica,sans-serif;
            font-style: normal;
            font-weight: 400;
            font-size: 10px;
            line-height: 14px;
            margin-right: 4px;
            padding: 3px;
            float: left;
            position: relative;
        }

        nk-popover-content {
            transition: all .3s cubic-bezier(.75,-.02,.2,.97);
            border: 2px solid #ee1e25;
        }

        .nk-top-stickers .nk-sticker.nk-bestseller {
            color: #fff;
            background: #ee1e25;
            position: relative;
            z-index: 1;
            padding-right: 14px;
            border-radius: 2px 0 0 2px;
        }

            .nk-top-stickers .nk-sticker.nk-bestseller:after {
                background: #fff;
                content: "";
