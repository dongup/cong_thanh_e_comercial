                height: 100%;
                margin-left: 10px;
                margin-right: 10px;
                position: relative;
            }

            .main-title .block .line-100 {
                width: 70px;
            }

            .main-title span {
                font-size: 65px;
                line-height: 120%;
                letter-spacing: -.05em;
                color: #2b3d69;
            }

            .main-title .block .line:before {
                height: 4px;
                width: 100%;
                content: "";
                top: 50%;
                position: absolute;
                transform: translate(0,50%);
                left: 0;
                background-color: #2b3d69;
                box-shadow: 2px 1.5px 0 #fff, 3px 3px 0 #d9d9d9;
