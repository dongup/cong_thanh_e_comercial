@model eCommerce.Web.Areas.Api.Models.General.IntroduceResponse
@{
    ViewData["Title"] = "Giới thiệu";
    Layout = "~/Views/Shared/_LayoutLanding.cshtml";
    Dictionary<string, string>[] Menus = (Dictionary<string, string>[])Context.Items["Menus"];
}
@section Styles{
    <style>
        #div-footer > div > p {
            line-height: 24px;
        }

        .line-height-24 {
            line-height: 24px;
        }

        .top-menu.position-fixed {
            top: 0;
            width: 100%
        }

        .height-24-px {
            max-height: 24px;
        }

        @@media only screen and (max-width: 480px) {
            .text-item {
                text-align: left !important;
            }
        }

        .owl-carousel:hover .owl-controls {
            display: none !important;
        }
    </style>
}
@section meta {
    <meta property="og:url" content="https://dienmaycongthanh.vn/" />
    <meta property="og:type" content="article" />
    <meta property="og:title" content="Trang chủ - Điện máy Công Thành | Chuyên kinh doanh các mặt hàng Điện tử, Điện lạnh, Điện gia dụng" />
    <meta property="og:description" content="https://dienmaycongthanh.vn/" />
    <meta property="og:image" content="/images/logo.png" />
}
<!-- Banner slide -->

<div id="banner-slide" class="owl-carousel owl-carousel-featured" style="display:block;">
    @foreach (var item in Model.BannerImages)
    {
        <div class="item">
            <img src="@item.FilePath" />
            <div class="sub-carousel"></div>
            <div class="carousel-caption text-left d-none p-0 d-md-block">
                <h1 class="text-white">Điện Máy Công Thành<br>Thiết bị điện máy đỉnh cao</h1>
                <p class="sub-title text-white">Chất lượng ổn định,<br />nâng tầm dịch vụ</p>
            </div>
        </div>
    }

</div>


<!--Nav-->
<div class="top-menu">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light w-100">
            <a class="navbar-brand" href="/"><img id="img-logo" src="~/images/logo.png" /></a>
            <button id="menu-content" class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse bg-white" id="menucontent">
                <ul class="navbar-nav ml-auto">
                    @foreach (var item in Menus)
                    {
                        if (item["Name"].ToString() == "Báo giá")
                        {
                            <li class="nav-item font-weight-bold">
                                <a class="nav-link" target="_blank" href="@item["Key"]">@item["Name"]</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item font-weight-bold">
                                <a class="nav-link" href="@item["Key"]">@item["Name"]</a>
                            </li>
                        }

                    }
                </ul>
            </div>
        </nav>
    </div>
</div>
