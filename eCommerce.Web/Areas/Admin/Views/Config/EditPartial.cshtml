<div id="modal-edit" class="modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm Popup Quảng Cáo</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-8 offset-md-2">

                    </div>
                    <div class="col-md-12">
                        <form id="form_id" class="form-horizontal mt-3">
                            <div class="form-group row">
                                <div class="col-3">
                                    <label class="col-form-label">Ảnh Popup</label>
                                    <p class="text-muted">Vui lòng chọn ảnh có kích thước <b>1240x1240</b> và dung lượng <b>20mb</b></p>
                                    <button id="btn-Upload" class="btn btn-primary"><i class="mdi mdi-image mr-1"></i>Chọn ảnh</button>
                                </div>
                                <div class="col-9">
                                    <img id="img-popup-add" class="w-100 cursor-pointer" src="/images/default-image.png" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="title" class="col-3 col-form-label">Tiêu Đề</label>
                                <div class="col-9">
                                    <input id="title" type="text" class="form-control" placeholder="Tiêu Đề">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="subtitle" class="col-3 col-form-label">Tiêu Đề Phụ</label>
                                <div class="col-9">
                                    <input type="text" class="form-control" id="subtitle" placeholder="Tiêu Đề Phụ">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="note" class="col-3 col-form-label">Note</label>
                                <div class="col-9">
                                    <input type="text" class="form-control" id="note" placeholder="Note">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="note" class="col-3 col-form-label">Link Liên Kết</label>
                                <div class="col-9">
                                    <input type="text" class="form-control" id="link" placeholder="Link">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3">Hiển Thị</label>
                                <div class="custom-control custom-checkbox col-9 pl-4"><input type="checkbox" class="custom-control-input todo-done" id="check-tool-add"><label class="custom-control-label" for="check-tool-add"></label></div>
                            </div>
                        </form>
                    </div>
                </div>




            </div>
            <div class="modal-footer">
                <button type="button" id="close_btn" class="btn btn-light m-w-100" data-dismiss="modal"><i class="mdi mdi-block-helper mr-1"></i>Đóng</button>
                <button id="btnMoi" type="button" class="btn btn-primary ml-1"><i class="mdi mdi-check mr-1"></i>Thêm mới</button>
            </div>

        </div>
    </div>
</div>