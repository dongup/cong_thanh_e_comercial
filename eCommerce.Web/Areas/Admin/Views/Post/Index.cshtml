
@{
    ViewData["Title"] = "QUẢN LÝ TIN TỨC";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <a href="/admin/post/add" type="button" class="btn btn-primary"><i class="mdi mdi-plus-circle font-16 mr-1"></i>Đăng tin mới</a>
                </div>
                <h4 class="page-title">Quản lý tin tức</h4>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="page-aside-left p-0">
                        <button onclick="loadTable()" type="button" class="btn btn-block btn-primary"><i class="mdi mdi-refresh font-16 mr-1"></i>Làm mới dữ liệu</button>
                        <div class="mt-4">
                            <h5 class="text-primary">Tìm kiếm</h5>
                            <div class="form-group">
                                <input id="ipt-text-search" type="text" class="form-control" placeholder="Tìm tiêu đề tin tức..." autocomplete="off" />
                            </div>
                        </div>
                        <hr />
                        <div class="mt-2">
                            <div class="mt-2">
                                <h5 class="text-primary">Danh mục</h5>
                                <div class="form-group">
                                    <select id="sl-category" class="form-control" data-toggle="select"></select>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="mt-2 d-none">
                            <h5 class="text-primary">Ngày đăng</h5>
                            <div class="form-group">
                                <input type="text" class="form-control" id="ipt-date" data-toggle="date-range-picker" placeholder="Chọn ngày đăng..." autocomplete="off">
                            </div>
                        </div>
                        <hr />
                        <div class="mt-2">
                            <h5 class="text-primary">Số bài viết</h5>
                            <div class="form-group">
                                <select id="sel-record-search" class="form-control" data-toggle="select-no-search">
                                    <option value="20">20 bài viết</option>
                                    <option value="30">30 bài viết</option>
                                    <option value="50">50 bài viết</option>
                                    <option value="100">100 bài viết</option>
                                    <option value="200">200 bài viết</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="page-aside-right">
                        <div class="table-responsive">
                            <table class="table table-hover table-centered">
                                <thead>
                                    <tr>
                                        <th class="text-center px-w-50">#</th>
                                        <th>Danh mục</th>
                                        <th>Tiêu đề</th>
                                        <th>Người soạn</th>
                                        <th>Ngày đăng</th>
                                        <th>Trạng thái</th>
                                        <th class="text-center px-w-50"></th>
                                    </tr>
                                </thead>
                                <tbody id="tbl-body">
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div id="div-pagination-info" class="col-6 mt-2"></div>
                            <div class="col-6"><div id="div-pagination-selection" class="float-right mb-3 mt-1"></div></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/iotsoftvn/Post/Indexpost.js"> </script>
}