<!--Modal Product Brand Add-->
<div class="modal " id="modal-add">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Thêm thương hiệu</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group text-center">
                            <label>Logo <span class="text-danger">*</span></label>
                            <img class="img-fluid cursor-pointer col-md-12" id="img-logo-add" src="~/images/default-image.png" />
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <form id="form-add">
                            <div class="form-group">
                                <label>Tên thương hiệu <span class="text-danger">*</span></label>
                                <input type="text" id="ipt-name-add" class="form-control" height="100" placeholder="Nhập tên thương hiệu" required />
                            </div>
                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea type="text" rows="2" id="ipt-note-add" class="form-control" placeholder="Nhập mô tả"></textarea>
                            </div>
                          
                            <div class="form-group">
                                <label>Danh mục sản phẩm</label>
                                <select id="sl-categories-add" class="select2 form-control select2-multiple" data-toggle="select" multiple="multiple" data-placeholder="Choose ...">
                                    <option value="AK">Alaska</option>
                                    <option value="HI">Hawaii</option>
                                </select>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal"><i class="mdi mdi-close mr-1"></i>Đóng</button>
                <button id="btn-add" onclick="javascript:$('#form-add').submit()" type="submit" class="btn btn-primary"><i class="mdi mdi-check mr-1"></i>Thêm mới</button>
            </div>
        </div>
    </div>
</div>