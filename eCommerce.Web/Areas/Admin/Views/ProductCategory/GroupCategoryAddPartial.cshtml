<!--  Modal content for the Large example -->
<div class="modal fade" id="modal-group-add">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="form-group-add">
                <div class="modal-header">
                    <h4 class="modal-title">Tạo nhóm danh mục</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group mb-3 col-md-12">
                            <label for="ipt-add-name">Chọn danh mục<small class="text-danger"><span class="text-danger"> &nbsp;* </span>&nbsp;&nbsp; Lưu ý: 1 danh mục sản phẩm chỉ đk sử dụng cho 1 nhóm</small></label>
                            <div class="input-group">
                                <select id="sl-group-add" class="select2  form-control select2-multiple" data-toggle="select" multiple="multiple" data-placeholder="Choose ...">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mb-3 col-md-12">
                            <label>Tên nhóm danh mục<span class="text-danger"> &nbsp;* </span></label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="ipt-name-group-add">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group mb-3 col-md-12">
                            <label>Biểu tượng</label>
                            <div class="input-group ">
                                <img src="/images/ic_arrow_right.png" id="img-icon-group-add" style="max-width:50px;" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label>Mô tả</label>
                            <textarea type="text" rows="2" id="ipt-note-group-add" class="form-control" placeholder="Nhập mô tả"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary">Thêm mới</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->